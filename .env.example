# База данных PostgreSQL
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=your_database_name

# URL подключения к базе данных
# Для Docker:
DATABASE_URL=postgresql://your_postgres_user:your_postgres_password@db:5432/your_database_name

# CORS настройки (разделенные запятыми)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Секретный ключ для JWT токенов (ОБЯЗАТЕЛЬНО измените в production! Минимум 32 символа)
SECRET_KEY=your-secret-key-change-in-production-min-32-chars-long

# Алгоритм для JWT токенов
ALGORITHM=HS256

# Время жизни access токена в минутах
ACCESS_TOKEN_EXPIRE_MINUTES=30
# Время жизни refresh токена в днях
REFRESH_TOKEN_EXPIRE_DAYS=30

# Название проекта
PROJECT_NAME=Smart Spend

# Версия API
VERSION=0.1.0

# Префикс API
API_V1_STR=/api/v1
